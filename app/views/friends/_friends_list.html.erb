<% if !@user_friends.empty? %>
	<div class="row ">
		<div class="col-9">
			<table class="table table-bordered table-hover">
			  <thead>
			    <tr>
			      <th scope="col">Name</th>
			      <th scope="col">Email</th>
			      <th scope="col">Actions</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% @user_friends.each do |friend| %>
				    <tr>
				      <td><%= friend.first_name %> <%= friend.last_name %></td>
				      <td><%= friend.email %></td>
				      <td>Action</td>
				    </tr>
			    <% end %>
			  </tbody>
			</table>

		</div>
	</div>
<% end %>